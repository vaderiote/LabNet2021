@model List<LabNet.TP_MVC.Models.CategoriesView>

@{ 
    <h1>Esta es mi pagina de Categorias</h1>
}
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="row">Category ID</th>
            <th scope="row">Category name</th>
        </tr>
    </thead>

    @foreach (var category in Model)
    {
<tr>
    <th scope="row">@category.Id</th>
    <th scope="row">@category.Description</th>
    <th scope="row">@Html.ActionLink("Borrar", "Delete", new {Id = category.Id }, new { onclick = "return confirm('Esta seguro de borrar?')" })</th>
    <th scope="row"> @Html.ActionLink("Modificar/Actualizar una categoria", "Update", new { Description = category.Description})</th>
</tr>

    }

</table>

<div>
    @Html.ActionLink("Insertar una nueva categoria", "Insert")
</div>

